              position=".25 -.35 0"
              side="double"
              scale=".5 .5 .5"
            ></a-text>
          </a-entity>
        </template>
      </a-assets>

      <a-entity spawner="template:#cube-template" position="-0.9 1 -0.9"></a-entity>
      

      <a-entity environment="preset:forest;groundColor:#000000;"></a-entity>
      <a-entity light="type:ambient;intensity:0.5"></a-entity>


      <!-- on desktop -->
